<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/whiteGray">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_back_green"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:id="@+id/ivbackDraw" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="24dp"
            android:src="@drawable/delete"
            android:id="@+id/ivDeleteDraw" />

        <Spinner
            android:background="#FFFFFF"
            android:id="@+id/spPenWidth"
            android:layout_marginRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:dropDownWidth="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"></Spinner>

        <Spinner

            android:background="@color/white"
            android:id="@+id/ivPenColorDraw"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_pen"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" />

        <Spinner
            android:background="#FFFFFF"
            android:id="@+id/spPenColorBackGround"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            ></Spinner>

        <TextView
            android:textColor="@color/greenLight"
            android:id="@+id/tvAlarmDrawNote"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:textSize="30dp"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:id="@+id/trTopWM">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_labels"
            android:layout_gravity="center" />

        <android.support.design.widget.TextInputLayout
            android:layout_marginRight="8dp"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Label"
            android:textColorHint="@color/black_semi_transparent"
            android:layout_gravity="center">

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:inputType="textCapWords"
                android:layout_gravity="center"
                android:id="@+id/edtLabelDrawNote"
                android:textSize="@dimen/nomar_text_size" />
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:background="#FAFAFA"
            android:id="@+id/spPenColor"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:dropDownWidth="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"></Spinner>

    </TableRow>

    <tech.soft.notemaster.ui.customview.DrawingView
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:id="@+id/dvDraw"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">

        <TextView
            android:drawableLeft="@drawable/ic_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="Undo"
            android:padding="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/tvUndoDraw"
            android:drawablePadding="2dp" />

        <TextView
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/ic_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tvAddDraw"
            android:textColor="@color/black"
            android:background="@color/white"
            android:text="Add"
            android:textSize="16dp"
            android:padding="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"

            />

    </RelativeLayout>


</LinearLayout>