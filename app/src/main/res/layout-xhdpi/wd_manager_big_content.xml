<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:background="@color/yellow"
    android:layout_height="300dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:id="@+id/trTopWM">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_labels"
            android:layout_margin="2dp"
            android:layout_gravity="center" />

        <EditText
            android:padding="2dp"
            android:layout_gravity="center"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Lable"
            android:textColor="@color/black"
            android:layout_margin="2dp"
            android:id="@+id/edtLableBW" />

        <Spinner
            android:background="#FAFAFA"
            android:id="@+id/spPenColorBW"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:dropDownWidth="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"></Spinner>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ic_menu_note" />
    </TableRow>

    <TextView
        android:id="@+id/tvLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/trTopWM"
        android:background="@color/black" />

    <tech.soft.notemaster.ui.customview.LinedEditText
        android:gravity="top"
        android:padding="4dp"
        android:layout_below="@id/trTopWM"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textSize="20dp"
        android:id="@+id/edtBodyBW"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/bt_add_bw"
        android:layout_marginBottom="8dp"
        android:id="@+id/btnAddTextNoteBW" />


</RelativeLayout>